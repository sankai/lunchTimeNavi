<h1>Listing lunches</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Genre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lunches.each do |lunch| %>
  <tr>
    <td><%= lunch.name %></td>
    <td><%= lunch.price %></td>
    <% if lunch.genre %>
      <td><%= lunch.genre.name %></td>
    <% else %>
      <td></td>
    <% end %>
    <td><%= link_to 'Show', lunch %></td>
    <td><%= link_to 'Edit', edit_lunch_path(lunch) %></td>
    <td><%= link_to 'Destroy', lunch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'ランチ検索に行く', {:controller => "summary_lists"} %>

